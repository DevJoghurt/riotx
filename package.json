{
  "name": "riotx",
  "version": "0.0.1",
  "description": "Centralized State Management for riot.js",
  "main": "index.js",
  "jsnext:main": "lib/index.js",
  "module": "lib/index.js",
  "modules.root": "lib",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "pretest": "npm run build",
    "lint": "npm run eslint && npm run karma && npm run mocha",
    "prepublish": "npm run build",
    "build": "npm run rollup && npm run uglify && npm run uglify-amd && npm run uglify-bundle && npm run uglify-amd-bundle",
    "rollup": "node rollup.js",
    "uglify": "uglifyjs dist/riotx.js --comments --mangle -o dist/riotx.min.js",
    "uglify-bundle": "uglifyjs dist/riotx+riot.js --comments --mangle -o dist/riotx+riot.min.js",
    "uglify-amd": "uglifyjs dist/amd.riotx.js --comments --mangle -o dist/amd.riotx.min.js",
    "uglify-amd-bundle": "uglifyjs dist/amd.riotx+riot.js --comments --mangle -o dist/amd.riotx+riot.min.js",
    "watch": "chokidar lib/* lib/**/* -c 'npm run build'",
    "eslint": "eslint src test/specs",
    "karma": "karma start test/karma.conf.js",
    "karma-bs": "BROWSERSTACK=1 karma start test/karma.conf.js",
    "mocha": "mocha test/specs/server.specs.js",
    "coveralls": "RIOT_COV=1 cat ./coverage/lcov.info ./coverage/report-lcov/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cam-inc/riotx.git"
  },
  "keywords": [
    "riot"
  ],
  "author": "CA Mobile, Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cam-inc/riotx/issues"
  },
  "homepage": "https://github.com/cam-inc/riotx#readme",
  "dependencies": {
    "riot": "^3.0.5",
    "riot-observable": "^3.0.0"
  },
  "devDependencies": {
    "rollup": "^0.38.0",
    "rollup-plugin-alias": "^1.2.0",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-riot": "^1.1.0",
    "slash": "^1.0.0",
    "uglify-js": "^2.7.4"
  }
}
